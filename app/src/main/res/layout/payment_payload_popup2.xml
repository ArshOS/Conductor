<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp"
        android:textAlignment="center"
        android:text="Are you sure you want to proceed?"
        android:textColor="#808080"
        android:textSize="16sp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical">
            <EditText
                android:id="@+id/order_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter order number"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:visibility="gone"
                android:maxLength="10"
                android:maxLines="1"
                android:padding="16dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/payable_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter payable amount"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:maxLength="10"
                android:maxLines="1"
                android:visibility="gone"
                android:padding="16dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/cashback_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter cash back amount"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:maxLength="10"
                android:maxLines="1"
                android:padding="16dp"
                android:visibility="gone"
                android:singleLine="true" />

            <EditText
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter customer name"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:visibility="gone"
                android:padding="16dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/ref2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="External Reference 2"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:visibility="gone"
                android:padding="16dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/ref3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="External Reference 3"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:visibility="gone"
                android:maxLines="1"
                android:padding="16dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/text_external_refs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="External Refs"
                android:imeOptions="actionNext"
                android:inputType="textMultiLine"
                android:lines="3"
                android:visibility="gone"
                android:padding="16dp"
                android:scrollbars="vertical"
                android:singleLine="false" />

            <EditText
                android:id="@+id/text_stop_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Txn List"
                android:imeOptions="actionNext"
                android:inputType="textMultiLine"
                android:lines="3"
                android:visibility="gone"
                android:padding="16dp"
                android:scrollbars="vertical"
                android:singleLine="false" />

            <EditText
                android:id="@+id/user_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter customer mobile number"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="10"
                android:visibility="gone"
                android:maxLines="1"
                android:padding="16dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter customer email id"
                android:imeOptions="actionDone"
                android:visibility="gone"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="16dp"
                android:singleLine="true" />
            <EditText
                android:id="@+id/product_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Product Brand"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:padding="16dp"
                android:singleLine="true"
                android:text="NOKIA"
                android:visibility="gone" />
            <EditText
                android:id="@+id/product_sku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Product SKU"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:padding="16dp"
                android:singleLine="true"
                android:text="Nokia6MB"
                android:visibility="gone" />

            <EditText
                android:id="@+id/product_serial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Product Serial"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:padding="16dp"
                android:singleLine="true"
                android:visibility="gone" />
            <EditText
                android:id="@+id/acc_lab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Account Label"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:visibility="gone"
                android:maxLines="1"
                android:padding="16dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/serv_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter service fee amount"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:visibility="gone"
                android:maxLines="1"
                android:padding="16dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/pay_by"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter payment by"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:visibility="gone"
                android:padding="16dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/merchant_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter merchant mobile number"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="10"
                android:maxLines="1"
                android:visibility="gone"
                android:padding="16dp"
                android:singleLine="true" />
            <EditText
                android:id="@+id/merchant_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter merchant email id"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:visibility="gone"
                android:padding="16dp"
                android:singleLine="true" />
            <EditText
                android:id="@+id/issueType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Issue Type"
                android:imeOptions="actionDone"
                android:maxLength="10"
                android:maxLines="1"
                android:visibility="gone"
                android:padding="16dp"
                android:singleLine="true" />
            <EditText
                android:id="@+id/issueInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Issue Info/comments"
                android:imeOptions="actionDone"
                android:maxLength="10"
                android:maxLines="1"
                android:visibility="gone"
                android:padding="16dp"
                android:singleLine="true" />
            <EditText
                android:id="@+id/tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Issue tags"
                android:imeOptions="actionNext"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:padding="16dp"
                android:scrollbars="vertical"
                android:singleLine="false"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="1"
                    android:background="#29CC0000"
                    android:padding="16dp"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="@android:color/holo_red_dark" />
                <Button
                    android:id="@+id/confirm_button"
                    style="android:buttonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#30669900"
                    android:padding="16dp"
                    android:text="Ok"
                    android:textColor="@android:color/holo_green_dark"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>